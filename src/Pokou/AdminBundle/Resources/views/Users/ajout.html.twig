{% extends "::base.html.twig" %}

{% block article %}
    <h3>Ajout d'utilisateur</h3>
    <form method='post' action="{{ path('ajouter') }}" name='ajout_user'>
        <label for='username'>Le pseudo de l'utilisateur :</label>
        <input type='text' id='username' name='username' /><br />
        <label for='email'>Entrez une adresse mail :</label>
        <input type='text' id='email' name='email'/><br />
        <label for='nom'>Nom :</label>
        <input type='text' id='nom' name='nom'/><br />
        <label for='prenom'>Prénom :</label>
        <input type='text' id='prenom' name='prenom'/><br />
        <label for='password'>Mot de passe :</label>
        <input type='password' id='password' name='password'/><br />
        <label for='adress'>Adresse :</label>
        <input type='text' id='adress' name='adress'/><br />
        <label for='postal'>Code postal :</label>
        <input type='text' id='postal' name='postal'/><br />
        <label for='ville'>Ville :</label>
        <input type='text' id='ville' name='ville'/><br />
        <label for='phone1'>Numéro de téléphone :</label>
        <input type='text' id='phone1' name='phone1'/><br />
        <label for='phone2'>Numéro de téléphone secondaire :</label>
        <input type='text' id='phone2' name='phone2'/><br />
        <label for='web'>Site web :</label>
        <input type='text' id='web' name='web'/><br />
        <label for='fb'>Facebook :</label>
        <input type='text' id='fb' name='fb'/><br />
        <label for='twitter'>Twitter :</label>
        <input type='text' id='twitter' name='twitter'/><br />
        <label for='gplus'>Google+ :</label>
        <input type='text' id='gplus' name='gplus'/><br />
        <label for='entite'>Société représentée :</label>
        <input type='text' id='entite' name='entite' />
        <select id='statut' name='statut'>
            <option>Personne morale</option>
            <option>Non adhérent</option>
            <option>Adhérent</option>
            <option>Etudiant</option>
            <option>Chômeur</option>
        </select><br />
        <select id='roles' name='roles'>
            <option>ROLE_USER</option>
            <option>ROLE_ADMIN</option>
            <option>ROLE_SUPER_ADMIN</option>
        </select><br />
        <input type='submit' value='Valider utilisateur' />
    </form>
{% endblock %}