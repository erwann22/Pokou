<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}PokoùCenter{% endblock %}</title>
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css" />
{% endblock %}
        
    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/pokoucenter/images/favicon.ico') }}" />
    </head>
    <body>
    {% block body %}
        <div id='header'>
            {% block header %}
                <h1>
                    <a href="Accueil"><img alt="" src="{{ asset('bundles/pokoucenter/images/blank.png') }}"></a>Pokoù<span style="font-weight:bold; color:#73868C;">Center</span>{# app.session.nomStructure #}</h1>
           
        {% endblock %}
        </div>
        <div id="container">
            <div id="navcontainer">
            </div>
            <div id="contentleft">{% block article %}{% endblock %}</div>
            <div id="contentright">
                {% block connexion %}
                {% endblock %}
                <div class="menu">
                    {% block menu %}
                    {% endblock %}
                </div>
            </div>
        </div>
                <div id='footer'>
    {% block footer %}
        <div id='bottom'>
        {{ webmaster }}
        </div>
    {% endblock %}
                </div>
    {% endblock %}
    {% block javascripts %}{% endblock %}
    </body>
</html>
